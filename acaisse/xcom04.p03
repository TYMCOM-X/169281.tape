	LHL     R0,DPORT					
	RBT 	R0,LSLCTD,,		:RESET THE "LINK ALREADY SELECTED" FLAG
	LHL	R5,IPORT	:R5 = I port number
	LIS	R0,0
	LA	R2,,R5,R5
	STH	R0,BF+IEDBIA,R2,R2	:CLEAR BF OF IED BUFFER
	STH	R0,BF+IECBIA,R2,R2	:CLEAR BF OF IEC BUFFER
